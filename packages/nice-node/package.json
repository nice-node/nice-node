    "koa-proxies": "^0.11.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "lint-staged": "10.0.7",
    "nodemon": "^2.0.2",
    "require-all": "^3.0.0",
    "rimraf": "^3.0.2",
    "statsd-client": "^0.4.4",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.1",
    "@types/should": "^13.0.0",
    "@types/supertest": "^2.0.8",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "report-dir": "./coverage"
  }
}
