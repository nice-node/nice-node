{
  "name": "create-nice-node",
  "version": "1.0.4",
  "description": "Create nice node apps with no build configuration.",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist",
    "template"
  ],
  "repository": "zhongzhi107/nice-node",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prerelease": "npm run build",
    "postrelease": "git push && git push origin --tags",
    "release": "standard-version --release-as patch && npm publish",
    "lint": "eslint \"src/**/*.{ts,js,tsx,jsx}\""
  },
  "bin": {
    "create-nice-node": "./dist/index.js"
  },
  "dependencies": {
    "ansi-escapes": "^4.3.0",
    "chalk": "^3.0.0",
    "ejs": "^3.0.1",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.0.4",
    "isbinaryfile": "^4.0.4",
    "mkdirp-then": "^1.2.0",
    "ms": "^2.1.2",
    "ora": "^4.0.3",
    "promise": "^8.0.3",
    "rimraf": "^3.0.1"
  },
  "devDependencies": {
    "@types/ansi-escapes": "^4.0.0",
    "@types/chalk": "^2.2.0",
    "@types/ejs": "^3.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.5.0",
    "@types/ora": "^3.2.0",
    "@types/rimraf": "^2.0.3",
    "eslint": "^6.8.0",
    "eslint-config-qunar-typescript-node": "^1.1.8",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.3",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,tsx,jsx}": "eslint"
  }
}
